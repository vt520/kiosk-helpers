#!/bin/bash

PROFILE_SOURCE='/home/profile.tbz'
[ -e $PROFILE_SOURCE ] || {
	echo
	echo "No profile to restore"
	exit 0
}
function get_folder_list() {
	tar tjf ../profile.tbz  \
		| grep "/$" \
		| grep -v "/.*/"
}
cd /home/kiosk
for FOLDER in $(get_folder_list); do
	rm -rf "$FOLDER"
done
tar xjpf $PROFILE_SOURCE
cd /home/kiosk
