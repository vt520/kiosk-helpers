#!/bin/bash
SSB_NAME=$(basename $0)
SSB_CONFIG="/home/kiosk/.config/ssb/${SSB_NAME}"
SSB_CACHE="/home/kiosk/.chrome"
[ "$SSB_NAME" == "ssb" ] && {
	echo Please call this from a symlink generated by do-update-ssb
	exit
}

[ -e $SSB_CONFIG ] || {
	echo SSB Not Configured Correctly; run do-update-ssb and check your configuration
	exit
}

chromium \
        --user-data-dir=$SSB_CACHE/$SSB_NAME \
        --app=$(<$SSB_CONFIG) \
	--block-new-web-contents \
	--class=SSB.$SSB_NAME/window
